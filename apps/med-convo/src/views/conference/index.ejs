<% layout('layouts/boilerplate') %>
<h1>All Conferences</h1>
<div>
  <a href="/conferences/new"> Add New Conference</a>
</div>
<% for (let conference of conferences) {%>
<div class="card">
  <div class="row">
    <div class="col-md-8">
      <% conference.images.forEach(image => { %>
      <img src="<%= image.url %>" class="img-fluid" alt="..." />
      <% }) %>
      <div class="card-body">
        <h5 class="card-title"><%= conference.title %></h5>
        <p class="card-text"><%= conference.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= conference.location %></small>
        </p>
        <a class="btn btn-primary" href="/conference/<%=conference.id%>"
          >View <%= conference.title %></a
        >
      </div>
    </div>
  </div>
</div>
<%}%>
