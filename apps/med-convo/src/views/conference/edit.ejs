<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="../../assets/stylesheets/conferense.css" />

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 offset-md-3">
      <h1 class="text-center mb-4">Edit Conference</h1>
      <form
        action="/conference/<%= conference.id %>?_method=PUT"
        method="post"
        novalidate
        class="validated-form"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input
            class="form-control"
            type="text"
            id="title"
            name="conference[title]"
            value="<%= conference.title %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input
            class="form-control"
            type="text"
            id="location"
            name="conference[location]"
            value="<%= conference.location %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea
            class="form-control"
            id="description"
            name="conference[description]"
            required
          >
<%= conference.description %></textarea
          >
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="price">Conference Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input
              type="number"
              class="form-control"
              id="price"
              placeholder="0.00"
              aria-label="Amount (to the nearest dollar)"
              aria-describedby="price-label"
              name="conference[price]"
              value="<%= conference.price %>"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input
            class="form-control"
            type="file"
            id="image"
            name="image"
            multiple
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="d-grid gap-2">
          <button class="btn btn-dark btn-lg" type="submit">
            Update Conference
          </button>
        </div>
      </form>

      <div class="mt-2 text-center">
        <a href="/conference/<%= conference.id %>">Back To Conferences</a>
      </div>
    </div>
  </div>
</div>
