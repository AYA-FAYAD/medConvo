<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Edit Conference</h1>
  <div class="col-6 offset-3">
    <form
      action="/conference/<%= conference.id%>?_method=PUT"
      method="post"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="conference[title]"
          value="<%=conference.title%>"
          required
        />
        <div class="valid-feedback">good</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="conference[location]"
          value="<%= conference.location %>"
          required
        />
        <div class="valid-feedback">good</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input type="file" name="image" id="" multiple />

        <!-- <input
          class="form-control"
          type="file"
          id="image"
          name="conference[image]"
          value="<%= conference.image %>"
          required
        /> -->
        <div class="valid-feedback">good</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="conference[description]"
          required
        >
 <%= conference.description%> </textarea
        >
        <div class="valid-feedback">good</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">conference Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="Amount (to the nearest dollar)"
            aria-describedby="price-label"
            name="conference[price]"
            value="<%= conference.price %>"
            required
          />
          <div class="valid-feedback">good</div>
        </div>
      </div>
      <button class="btn btn-success">Update Conference</button>
    </form>

    <div class="mb-3">
      <a href="/conference/<%= conference.id%>">Back To Conferences</a>
    </div>
  </div>
</div>
