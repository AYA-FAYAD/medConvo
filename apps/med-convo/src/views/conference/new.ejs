<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="../../assets/stylesheets/conferense.css" />
<div class="row">
  <h1 class="text-center">New Conference</h1>
  <div class="col-md-6 offset-md-3">
    <div class="card-shadow">
      <div class="card-body">
        <form
          action="/conferences"
          method="post"
          novalidate
          class="validated-form"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input
              class="form-control"
              type="text"
              id="title"
              name="conference[title]"
              required
            />
            <div class="valid-feedback">good</div>
          </div>

          <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input
              class="form-control"
              type="text"
              id="location"
              name="conference[location]"
              required
            />
            <div class="valid-feedback">good</div>
          </div>

          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea
              class="form-control"
              type="text"
              id="description"
              name="conference[description]"
              required
            ></textarea>
            <div class="valid-feedback">good</div>
          </div>

          <div class="mb-3">
            <label class="form-label" for="price">Conference Price</label>
            <div class="input-group">
              <span class="input-group-text" id="price-label">$</span>
              <input
                type="number"
                class="form-control"
                id="price"
                placeholder="0.00"
                aria-label="Amount (to the nearest dollar)"
                aria-describedby="price-label"
                name="conference[price]"
                required
              />

              <div class="valid-feedback">good</div>
            </div>
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input
              class="form-control"
              type="file"
              id="image"
              name="image"
              multiple
            />
          </div>

          <button class="btn btn-dark btn-lg btn-block w-100">
            Add Conference
          </button>
        </form>
      </div>
    </div>
    <div class="mt-2">
      <a href="/conferences">back</a>
    </div>
  </div>
</div>
